<div class="d-flex flex-column align-items-center">
  <h1 class="mt-5">
	  <%= title %>
	</h1>
	<% bug.each do |b| %>
    <div class="col-md-11 my-3">
      <div class="h-100 p-5 text-white bg-dark rounded-3 d-flex align-items-center justify-content-around">
	      <% if b.img.present? %>
          <div class="col-md-1" >
	          <%=image_tag b.img.url , style: 'height:150px;width:150px;' %>
          </div>
	      <% end %>
          <div class="col-md-8">
	          <h2><%= link_to "Title : #{b.title.capitalize}" , project_bug_path(@project, b) , style: "text-decoration:none" %></h2>
	          <hr>
	          <p>Description : <%= b.description.capitalize.truncate(100) %> </p>
	          <br>
              <div class="d-flex justify-content-between">
	              <span>Type : <%= b.bug_type.capitalize %></span>
	              <span>Status : <%= b.status.capitalize %> </span>
	        </div>
	              <hr>
                <div class="d-flex justify-content-between">
                  <small>Created by : <%= b.user.name.capitalize %></small>
	                <% if b.assign_to.present? %>
	                  <small>Assign to : <%= User.find(b.assign_to).name.capitalize %> </small>
	                <% end %>
                </div>
              </div>
          </div>
      </div>
  <% end %>
</div>